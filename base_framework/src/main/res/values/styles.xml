<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Anim.Main" parent="@android:style/Animation">
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
    </style>

    <style name="CenterToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="ctt_titleTextAppearance">@style/CenterToolbarTitleAppearance</item>
    </style>
    <style name="CenterToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="BaseDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>